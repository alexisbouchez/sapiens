generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id       String   @id @default(cuid())
  email    String   @unique
  password String
  courses  Course[]
  role     String   @default("STUDENT")
}

model Course {
  id          String @id @default(cuid())
  name        String
  description String
  students    User[]
}
