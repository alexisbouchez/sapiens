generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String     @id @default(cuid())
  email     String     @unique
  password  String
  role      String     @default("STUDENT")
  chatRooms ChatRoom[]
  Chat      Chat[]
}

model ChatRoom {
  id           String @id @default(cuid())
  participants User[]
  chats        Chat[]
}

model Chat {
  id         String   @id @default(cuid())
  message    String
  user       User     @relation(fields: [userId], references: [id])
  userId     String
  chatRoom   ChatRoom @relation(fields: [chatRoomId], references: [id])
  chatRoomId String
}
